<% include ../partials/header %>


<div class="ui container">
  <div class="ui segments">
    <div class="ui placeholder segment">
      <div class="ui stackable grid">
        <div class="ui vertical hidden divider"></div>
        <div class="twelve wide column">
          <div class="ui fluid image">
            <img src="<%= shop.image %>">
          </div>
        </div>
        <div class="four wide column">
          <h2>Description</h2>
          <p><%= shop.description %></p>
          <form action="/shops/<%= shop._id %>?_method=DELETE" method="post">
            <button class="ui red button">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <div class="ui segment">
      <div class="ui comments">
        <h2 class="ui dividing header">Ratings</h2>
        <% shop.reviews.forEach((review) => { %>
          <div class="comment">
            <div class="content">
              <a class="author"><%= review.author %></a>
              <div class="metadata">
                <div class="rating">
                  <% for (var i=0; i < review.rating; i++) { %>
                    <i class="star icon"></i>
                  <% } %>
                </div>
              </div>
              <div class="text"><%= review.text %></div>
            </div>
          </div>
        <% }); %>
        <form class="ui reply form" action="/shops/<%= shop._id %>/reviews" method="POST">
          <div class="field">
            <textarea name="comment[text]"></textarea>
          </div>
          <button class="ui blue labeled submit icon button">
            <i class="icon edit"></i> Add Reply
          </button>
        </form>
      </div>
    </div>
  </div>
</div>


<% include ../partials/footer %>